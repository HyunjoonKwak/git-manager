{
  "$schema": "https://schemas.tauri.app/config/2/capabilities",
  "identifier": "default",
  "description": "Default capabilities for Git Manager",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/**" },
        { "path": "/" },
        { "path": "/**" }
      ]
    }
  ]
}
